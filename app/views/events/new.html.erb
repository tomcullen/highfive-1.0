<h1>Create a new Event!</h1>


<%= form_for @event do |f| %>
  <%= f.hidden_field :contact_id, value: params[:id] %>
  <%= f.select :plan, %w(Coffee Follow-Up Interview Downgrade)  %><br />
  <%= f.date_select :meeting_date %><br />
  Add notes about this meeting here:<br />
  <%= f.text_area :notes %>
  <%= f.submit %>
<% end %>
