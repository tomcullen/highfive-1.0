<div id="page_header">Information for Company: <%= @company.companyname %></div>
<br />

<p>
  <strong>Website:</strong>
  <%= link_to @company.website, "http://#{@company.website}" unless @company.website.blank? %>
</p>
<p>
  <strong>Industry:</strong>
  <%= @company.industry %>
</p>

<p>
  <strong>My Notes on <%= @company.companyname %>:</strong>
  <%= @company.companynotes %>
</p>

<br />

<p>
  <strong>My <%= @company.companyname %> Contacts:</strong>
  <% @company.contacts.each do |contact| %>
  <ul>  
    <%= link_to "#{contact.firstname} #{contact.lastname}", contact_url(contact) %>
  </ul>
  <% end %>
</p>

<div id="item_links"><%= link_to "Edit Company", edit_company_url %> | 
<%= link_to "Delete Comany", company_url, method: :delete %></div>
