  <div id = "container">

  <body class="landing_page">
    <% if flash[:notice] %>    
      <div id = "notice">
        <%= flash[:notice] %>
      </div>
    <% end %>

    <div id="logo">
      <%= image_tag "HighFiveLogo.png" %>
    </div>
    
    <div id = "info">
      <div id = "manage">Manage your job search</div>
      
      <div id = "join"> Coming Soon! Join our mailing list</div>
      <p>
        <%= form_for @interested do |f| %>
        <%= f.text_field :email, placeholder: "tom@highfivejobs.com" %>
      </p>
          <div id= "button"> 
            <%= f.submit "Submit" %>
            
          </div>
        
        <% end %>
    </div>
    
    <footer>
     <div id = "blog"> <%= link_to 'Visit our Blog', 'http://highfivejobs.tumblr.com/' %></div>
    </footer>
  </body></div>
